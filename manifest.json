{
  "manifest_version": 2,
  "name": "Kontur food rater",
  "description": "Allows to give a personal rating to dishes at https://cafe.skbkontur.ru",
  "version": "0.1.1",

  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "css": [
        "style.css"
      ],
      "js": [
        "content.js"
      ],
      "matches": [
        "https://cafe.skbkontur.ru/*"
      ]
    }
  ],
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "page_action": {
    "default_icon": "img/icon32.png",
    "default_title": "Kontur food rater"
  },
  "permissions": [
    "https://cafe.skbkontur.ru/",
    "storage",
    "tabs"
  ]
}
